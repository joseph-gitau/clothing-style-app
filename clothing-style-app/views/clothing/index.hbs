<h1 class="mt-4">{{title}}</h1>
<a href="/clothing/new" class="btn btn-primary mb-4">Add New Clothing Item</a>
<div class="row">
  {{#each clothes}}
    <div class="col-md-4">
      <div class="card mb-4">
        <img
          class="card-img-top"
          src="{{this.imageUrl}}"
          alt="{{this.name}}"
          style="height: 200px; object-fit: cover;"
        />
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.category}}</p>
          <p class="card-text">${{this.price}}</p>
          <p class="card-text">{{this.description}}</p>
          <a
            href="/clothing/{{this._id}}/edit"
            class="btn btn-secondary"
          >Edit</a>
          <form
            action="/clothing/{{this._id}}/delete"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
  {{/each}}
</div>